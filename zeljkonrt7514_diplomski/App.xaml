        <!--ListboxItemStyle-->
        <Style x:Key="ListBoxItemStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="Foreground" Value="#FF7B66A0"></Setter>
            <Setter Property="BorderThickness" Value="0,2,0,0"></Setter>
            <Setter Property="Height" Value="245"></Setter>
            <Setter Property="Width" Value="590"></Setter>
            <Setter Property="BorderBrush" Value="OrangeRed"></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontFamily" Value="/zeljkonrt7514_diplomski;component/Font/#Lato"></Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="28"></RowDefinition>
                                <RowDefinition Height="28"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock x:Name="tbNazivVezbe"  Text="{Binding Path=nazivVezbe}"/>
