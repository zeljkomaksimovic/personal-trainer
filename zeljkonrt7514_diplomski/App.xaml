<Application x:Class="zeljkonrt7514_diplomski.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:zeljkonrt7514_diplomski"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--STYLES-->
        <!--CheckBoxDiaryStyle-->
        <Style x:Key="CheckBoxDiaryStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="Red"></Setter>
        </Style>
        <!--ListBoxKilazaProgressItemStyle-->
        <Style x:Key="ListBoxKilazaProgressItemStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="#FF51326A"></Setter>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden"></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontFamily" Value="/zeljkonrt7514_diplomski;component/Font/#Lato"></Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="40"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="180"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="0" Grid.Column="0" ShowGridLines="True">
                                <TextBlock x:Name="tbNazivNamirnice"  Text="{Binding Path=tezina, StringFormat=' {0} kg'}" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextAlignment="Center" Margin="0,0,0,0"/>
                            </Grid>
                            <Grid Grid.Row="1" Grid.Column="0" ShowGridLines="True">
                                <Rectangle Width="2" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Fill="#af94c3" Margin="140,0,0,0"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--ListBoxDatumProgressItemStyle-->
        <Style x:Key="ListBoxDatumProgressItemStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Foreground" Value="#FF51326A"></Setter>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden"></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="FontFamily" Value="/zeljkonrt7514_diplomski;component/Font/#Lato"></Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"></RowDefinition>
                                <RowDefinition Height="40"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="186"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0" Grid.Column="0" ShowGridLines="True">
                                <TextBlock x:Name="tbNazivNamirnice"  Text="{Binding}" FontSize="14" HorizontalAlignment="Right" VerticalAlignment="top" TextAlignment="Center" Margin="0,0,0,0"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--ListBoxDiaryItemStyle-->
        <Style x:Key="LListBoxDiaryItemStyle" TargetType="ListBox">
            <Setter Property="Background" Value="#FFF6EAFF"></Setter>
            <Setter Property="Foreground" Value="#FF51326A"></Setter>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="FontFamily" Value="/zeljkonrt7514_diplomski;component/Font/#Lato"></Setter>
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <TextBlock x:Name="tbNazivNamirnice"  Text="{Binding Path=foodName}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            </Grid>
                            <Grid Grid.Column="1">
                                <TextBlock x:Name="tbKolicina"  Text="{Binding Path=kolicina, StringFormat=' {0} g'}" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </DataTemplate>
