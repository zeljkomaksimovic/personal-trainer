        </Style>
        <!--DropShadowLoginText-->
        <Style x:Key="DropShadowLoginText" TargetType="TextBlock">
            <Setter Property = "BitmapEffect">
                <Setter.Value>
                    <DropShadowBitmapEffect Color="Black" Direction="340" ShadowDepth="1" Softness="0.8" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!--DropShadowLoginLogo-->
        <Style x:Key="DropShadowLoginLogo" TargetType="Image">
